{% extends "base/section.twig" %}



{% block sectionBody %}

<div class="row">
    <div class="medium-centered medium-12 large-10 columns">


        <div class="spacer2"></div>

        <h3>What is it</h3>
        <p>
            We'll send you an email when you receive bitcoins or Counterparty tokens at the address you provide.
        </p>

        <div class="spacer1"></div>

        <h3>How Much Does it Cost</h3>
        <p>
            We'll notify you of the first 2 payments for free.  After that, send us 1,000 LTBcoin or 3 mBTC and we'll continue to monitor your payment address.
        </p>

        <div class="spacer1"></div>

        <h3>Try it Right Now</h3>
        <p>
            Enter a bitcoin address and an email address below.  We'll send you one email now to verify your email address.  Then, we'll send you an email any time this address receives bitcoin or Counterparty tokens.
        </p>

        
        <form action="{{url('home')}}" method="POST">
            <fieldset>
                <legend>Start Now</legend>

                {# errors #}
                {% if error|length %}
                <div data-alert class="alert-box alert">
                    <div>There were some errors.  Please try again.</div>
                    <div class="spacer1"></div>
                    {{ error|raw }}
                </div>
                {% endif %}
                
                <label for="email">
                    Email Address
                    <span class="sublabel">We won't send you spam or share your email with anyone else</span>
                </label>
                <input type="email" name="email" id="email" placeholder="me@myemaildomain.com" value="{{submittedData.email}}">

                <label for="bitcoinAddress">
                    Bitcoin Address
                </label>
                <input type="text" name="bitcoinAddress" id="bitcoinAddress" placeholder="12m7y5thKyTzLgN48muDeAoDZQdzUBQ688"  value="{{submittedData.bitcoinAddress}}">


                <div class="spacer1"></div>

                <button type="submit">Send Confirmation Email</button>

                <div class="spacer1"></div>


            </fieldset>

        </form>


        <div class="spacer5"></div>

    </div>

</div>




{% endblock %}


{% block app_js %}
{{ parent() }}
{% endblock %}
